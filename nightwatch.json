{
  "src_folders": ["e2eTest"],
  "output_folder": "output/e2e",
  "selenium": {
    "start_process": true,
    "server_path": "bin/selenium-server-standalone-3.8.1.jar",
    "log_path": "output/e2e",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.gecko.driver": "",
      "webdriver.chrome.driver": "./bin/chromedriver",
      "webdriver.edge.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "asyncHookTimeout": 60000,
      "screenshots": {
        "enabled": true,
        "path": "output/e2e",
        "on_failure": true,
        "on_error": true
      },
      "globals": {
        "waitForConditionTimeout": 60000,
        "asyncHookTimeout": 60000
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": ["--no-sandbox", "--headless", "--disable-gpu"]
        }
      }
    }
  },
  "test_runner": {
    "type": "mocha",
    "options": {
      "ui": "bdd",
      "reporter": "list"
    }
  }
}
