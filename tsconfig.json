{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["es6", "es2016", "dom", "esnext.asynciterable"],
    "removeComments": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["app/**/*", "e2eTest/**/*", "localServer/**/*", "server/**/*"],
  "exclude": ["node_modules/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
