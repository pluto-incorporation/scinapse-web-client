pipeline {
    agent any

    tools {nodejs "Node920"}

    stages {
        stage('Checkout') {
            steps {
                echo "My branch is: ${env.BRANCH_NAME}"
                checkout scm
            }
        }
        stage('Install dependencies'){
            steps {
                sh 'npm install'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm run deploy:stage'
            }
        }
    }
}
