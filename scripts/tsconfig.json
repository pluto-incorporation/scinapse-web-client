{
  "compilerOptions": {
    "outDir": "../dist-sls",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2016", "dom", "esnext.asynciterable"],
    "typeRoots": ["../node_modules/@types", "../typings"],
    "removeComments": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules/**/*"]
}
